<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RippleCheckBox">
        <attr name="rcbStatus" format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="HOOK" value="1" />
            <enum name="CROSS" value="2" />
        </attr>

        <attr name="rcbCircleClickedStatus"     format="enum">
            <enum name="HOOK" value="1" />
            <enum name="CROSS" value="2" />
        </attr>
        <attr name="rcbCircleLongClickedStatus" format="enum">
            <enum name="HOOK" value="1" />
            <enum name="CROSS" value="2" />
        </attr>
        <attr name="rcbHookClickedStatus"       format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="CROSS" value="2" />
        </attr>
        <attr name="rcbHookLongClickedStatus"   format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="CROSS" value="2" />
        </attr>
        <attr name="rcbCrossClickedStatus"      format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="HOOK" value="1" />
        </attr>
        <attr name="rcbCrossLongClickedStatus"  format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="HOOK" value="1" />
        </attr>

        <attr name="rcbEnableClick"             format="boolean" />
        <attr name="rcbEnableLongClick"         format="boolean" />

        <attr name="rcbCenterCircleRadius"      format="dimension" />
        <attr name="rcbCenterCircleStrokeWidth" format="dimension" />
        <attr name="rcbCenterCircleColor"       format="color"     />


        <attr name="rcbRightStrokeWidth"        format="dimension" />
        <attr name="rcbRightColor"              format="color"     />
        <attr name="rcbRightDuration"           format="integer"   />

        <attr name="rcbDeleteStrokeWidth"        format="dimension" />
        <attr name="rcbDeleteColor"              format="color"     />
        <attr name="rcbDeleteDuration"           format="integer"   />
        <attr name="rcbDeleteCorner"             format="dimension" />
        <attr name="rcbDeleteScale"              format="float" />
        <attr name="rcbDeleteEnable"             format="boolean" />

        <attr name="rcbRightStartDegree"        format="integer"   />
        <attr name="rcbRightCenterDegree"       format="integer"   />
        <attr name="rcbRightEndDegree"          format="integer"   />
        <attr name="rcbRightCorner"             format="dimension" />


        <attr name="rcbRippleStrokeWidth"       format="dimension" />
        <attr name="rcbRippleColor"             format="color"     />
        <attr name="rcbRippleMargin"            format="dimension" />
        <attr name="rcbRippleDuration"          format="integer"   />

    </declare-styleable>
</resources>